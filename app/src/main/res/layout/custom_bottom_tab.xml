<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_home"
            style="@style/tabLinearLayoutStyle">

            <ImageView
                android:id="@+id/iv_tab_home"
                style="@style/tabIconStyle"
                android:src="@drawable/ic_home_tab_selector" />

            <TextView
                android:id="@+id/tv_tab_home"
                style="@style/tabTextStyle"
                android:text="@string/homepage" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_find"
            style="@style/tabLinearLayoutStyle">

            <ImageView
                android:id="@+id/iv_tab_find"
                style="@style/tabIconStyle"
                android:src="@drawable/ic_find_tab_selector" />

            <TextView
                android:id="@+id/tv_tab_find"
                style="@style/tabTextStyle"
                android:text="@string/find" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mall"
            style="@style/tabLinearLayoutStyle">

            <ImageView
                android:id="@+id/iv_tab_mall"
                style="@style/tabIconStyle"
                android:src="@drawable/ic_mall_tab_selector" />

            <TextView
                android:id="@+id/tv_tab_mall"
                style="@style/tabTextStyle"
                android:text="@string/mall" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main"
            style="@style/tabLinearLayoutStyle">

            <ImageView
                android:id="@+id/iv_tab_main"
                style="@style/tabIconStyle"
                android:src="@drawable/ic_main_tab_selector" />

            <TextView
                android:id="@+id/tv_tab_main"
                style="@style/tabTextStyle"
                android:text="@string/main" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
